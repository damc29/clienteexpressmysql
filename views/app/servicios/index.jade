extends ../../layout.jade
block contenido
	div(class="container")
		h1 Servicios
		for servicio in servicios
			.white.border.tr.large-padding
				.row
					.col-md-10
						h2=servicio.nombre
						if servicio.estado == "0"
							p Ocupado
						if servicio.estado == "1"
							p Disponible
					.col-md-2
						a(href="/servicios/#{servicio._id}/edit",class="right-space") Editar
						form(action="/servicios/#{servicio._id}?_method=DELETE" class="link" method="POST")
							input(type="submit", value="Eliminar")